                },
                component_save() {
                    //alert(UE.getEditor('container').getContent());
                    this.$emit('modify', this.modifylist);
                }
            }
        });
        var app = new Vue({
            el: '#app',
            data: {
                isActive: false,
                curentdirPath: "/",
                selected: -1,
                selectedlist: {},
                slist: [],
                searchlist: [],
                pageCurrent: 1,
                pageAll: 20,
                totalBoxcChecked: false, //是否全选
                checkedList: [], //双向数据绑定的数组，我是用的id
                list: [
                    //{
